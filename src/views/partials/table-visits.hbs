<table class="table is-fullwidth">
  <thead>
    <tr>
      {{!-- <th><abbr title="Name">Name</abbr></th> --}}
      <th><abbr title="Activity">Activity</abbr></th>
      <th><abbr title="Date">Date</abbr></th>
      <th><abbr title="Description">Description</abbr></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each visits}}
      <tr>
        {{!-- <td>{{name}}</td> --}}
        <td>{{activity}}</td>
        <td>{{date}}</td>
        <td>{{description}}</td>
        <td><a href="/placemark/{{../placemark._id}}/deletevisit/{{_id}}"><button class="button is-danger is-small">Delete Log</button></a></td>
      </tr>
    {{/each}}
  </tbody>
</table>