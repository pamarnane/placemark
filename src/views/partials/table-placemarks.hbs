<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><abbr title="Name">Name</abbr></th>
      <th><abbr title="Category">Category</abbr></th>
      <th><abbr title="Description">Description</abbr></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each placemarks}}
      <tr>
        <td>{{name}}</td>
        <td>{{category}}</td>
        <td>{{description}}</td>
        <td><a class="button is-danger is-outlined" href="/dashboard/deleteplacemark/{{_id}}">
              <span>Delete</span>
                <span class="icon is-small">
                  <i class="fas fa-times"></i>
                </span>
            </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


